{
  "language": "ja",
  "title": "HTML講座 発展篇",
  "description": "Middleman, Slim, Sass, Git",
  "styles": {
    "website": "styles/website.css",
    "pdf": "styles/pdf.css"
  },
  "plugins": [
    "theme-official",
    "navigator",
    "include-codeblock",
    "image-captions",
    "mermaid-gb3"
  ],
  "pluginsConfig": {
    "image-captions": {
      "caption": "図 _BOOK_IMAGE_NUMBER_. _CAPTION_",
      "align": "left"
    }
  },
  "pdf": {
    "pageNumbers": true,
    "fontFamily": "VL Gothic",
    "fontSize": 10,
    "paperSize": "a4",
    "margin": {
      "right": 0,
      "left": 0,
      "top": 0,
      "bottom": 0
    }
  }
}

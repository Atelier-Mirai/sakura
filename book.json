{
  "language": "ja",
  "title": "HTML講座 発展篇",
  "description": "Middleman, Slim, Sass, Git",
  "styles": {
    "website": "styles/website.css",
    "pdf": "styles/pdf.css"
  },
  "plugins": [
    "theme-official",
    "page-toc-button",
    "include-codeblock",
    "anchors",
    "mermaid-gb3",
    "js-sequence-diagram"
  ],
  "pluginsConfig": {
    "include-codeblock": {
      "template": "./resources/gitbook-plugin-include-codeblock.hbs"
    },
    "page-toc-button": {
      "maxTocDepth": 2,
      "minTocSize": 2
    },
    "image-captions": {
      "caption": "図 _BOOK_IMAGE_NUMBER_. _CAPTION_",
      "align": "left"
    }
  },
  "pdf": {
    "pageNumbers": true,
    "fontFamily": "Helvetica Neue",
    "fontSize": 11,
    "paperSize": "b5",
    "margin": {
      "right": 0,
      "left": 0,
      "top": 0,
      "bottom": 0
    }
  }
}
